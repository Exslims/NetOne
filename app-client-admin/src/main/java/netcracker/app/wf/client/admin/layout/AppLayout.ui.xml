<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="res" type="netcracker.app.wf.client.admin.style.GwtResource"/>
    <g:HTMLPanel>
        <g:HorizontalPanel styleName="{res.style.footer}">
            <g:Label>Test Project</g:Label>
        </g:HorizontalPanel>
        <g:HorizontalPanel>
            <g:VerticalPanel styleName="{res.style.mainPanel}">
                <g:HorizontalPanel styleName="{res.style.hPanel}">
                    <g:Label horizontalAlignment="center">Menu</g:Label>
                </g:HorizontalPanel>
                    <g:Hyperlink targetHistoryToken="home:" styleName="{res.style.link}">Home</g:Hyperlink>
                    <g:Hyperlink targetHistoryToken="users:" styleName="{res.style.link}">Users</g:Hyperlink>
                    <g:Hyperlink targetHistoryToken="tasks:" styleName="{res.style.link}">Tasks</g:Hyperlink>
                    <g:Hyperlink targetHistoryToken="adduser:" styleName="{res.style.link}">Add User</g:Hyperlink>
                    <g:Hyperlink targetHistoryToken="addtask:" styleName="{res.style.link}">Add Task</g:Hyperlink>
            </g:VerticalPanel>
            <g:SimplePanel ui:field="appContent" styleName="{res.style.content}"/>
        </g:HorizontalPanel>
    </g:HTMLPanel>
</ui:UiBinder>
