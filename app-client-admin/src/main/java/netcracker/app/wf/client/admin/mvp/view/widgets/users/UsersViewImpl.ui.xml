<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="res" type="netcracker.app.wf.client.admin.style.GwtResource"/>
    <g:HTMLPanel>
        <div>
            <div class="searchContainer">
                <div class="searchBox">
                    <div class="block1">
                        <label>Enter name:</label>
                        <g:TextBox ui:field="nameField"/>
                        <g:Button ui:field="searchByNameButton">Search!</g:Button>
                    </div>
                    <div class="block1">
                        <label>Enter id:</label>
                        <g:TextBox ui:field="idField"/>
                        <g:Button ui:field="searchByIdButton">Search!</g:Button>
                    </div>
                    <div class="block1">
                        <g:Button ui:field="showAllButton">Show all!</g:Button>
                    </div>
                </div>
            </div>
            <div class="tasksBox">
                <g:VerticalPanel ui:field="accordion"/>
            </div>
            <div class="scroll">
                <g:FlexTable ui:field="flexTable"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>