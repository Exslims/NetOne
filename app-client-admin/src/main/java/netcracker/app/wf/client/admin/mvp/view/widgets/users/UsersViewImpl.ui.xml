<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="res" type="netcracker.app.wf.client.admin.style.GwtResource"/>
    <g:VerticalPanel styleName="{res.style.mainPanel}">
        <g:VerticalPanel styleName="{res.style.contentPanel}">
            <g:HorizontalPanel>
                <g:VerticalPanel>
                    <g:Label>Enter name:</g:Label>
                    <g:HorizontalPanel>
                        <g:TextBox ui:field="nameField"/>
                        <g:Button ui:field="searchByNameButton">Search!</g:Button>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
                <g:VerticalPanel>
                    <g:Label>Enter id:</g:Label>
                    <g:HorizontalPanel>
                        <g:TextBox ui:field="idField"/>
                        <g:Button ui:field="searchByIdButton">Search!</g:Button>
                        <g:Button ui:field="showAllButton">Show all!</g:Button>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
            </g:HorizontalPanel>
            <g:FlexTable ui:field="usersTable" styleName="{res.style.table}"/>
            <g:Label ui:field="callbackField"/>
        </g:VerticalPanel>
    </g:VerticalPanel>
</ui:UiBinder>