<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .table{
            text-align: center;
            width:100%;
            background-color: aliceblue;
            margin-top: 1em;
            border-bottom: 1px solid black;
        }
        .mainPanel{
            margin: 10px 10px;
            width: 1000px;
            border: 1px solid black;
        }
        .hPanel{
            background-color: #a4c7df;
            border-bottom: 1px solid black;
            margin: 0 auto;
            width: 1000px;
        }
        .contentPanel{
            margin: 0 auto;
            width: 1000px;
        }

    </ui:style>
    <g:VerticalPanel styleName="{style.mainPanel}">
    <g:HorizontalPanel styleName="{style.hPanel}">
        <g:Label horizontalAlignment="center">Tasks</g:Label>
    </g:HorizontalPanel>
        <g:VerticalPanel styleName="{style.contentPanel}">
            <g:HorizontalPanel>
                <g:VerticalPanel>
                    <g:Label>Enter name:</g:Label>
                    <g:HorizontalPanel>
                        <g:TextBox ui:field="nameField"/>
                        <g:Button ui:field="searchByNameButton">Search!</g:Button>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
                <g:VerticalPanel>
                    <g:Label>Enter id:</g:Label>
                    <g:HorizontalPanel>
                        <g:TextBox ui:field="idField"/>
                        <g:Button ui:field="searchByIdButton">Search!</g:Button>
                        <g:Button ui:field="showAllButton">Show all!</g:Button>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
            </g:HorizontalPanel>
            <g:FlexTable ui:field="usersTable" styleName="{style.table}"/>
            <g:Label ui:field="callbackField"/>
        </g:VerticalPanel>
    </g:VerticalPanel>
</ui:UiBinder>