<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="res" type="netcracker.app.wf.client.admin.style.GwtResource"/>
    <g:VerticalPanel>
        <g:HorizontalPanel styleName="{res.style.contentHead}">
            <g:Label horizontalAlignment="center">Add user</g:Label>
        </g:HorizontalPanel>
            <g:VerticalPanel>
                <g:Label>Login:</g:Label>
                <g:TextBox ui:field="loginField"/>
                <g:Label>Password:</g:Label>
                <g:TextBox ui:field="passwordField"/>
                <g:Label>Name:</g:Label>
                <g:TextBox ui:field="nameField"/>
                <g:Label>Email:</g:Label>
                <g:TextBox ui:field="emailField"/>
                <g:Label>Address:</g:Label>
                <g:TextBox ui:field="addressField"/>
                <g:Label>Country:</g:Label>
                <g:TextBox ui:field="countryField"/>
                <g:Label>Java Skills:</g:Label>
                <g:TextBox ui:field="javaslField"/>
                <g:VerticalPanel>
                    <g:Button ui:field="submitButton">Submit!</g:Button>
                    <g:HorizontalPanel ui:field="succesPanel" visible="false" styleName="{res.style.sucNotify}">
                        <g:Label styleName="{res.style.notifyLabel}">User successfully created</g:Label>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel ui:field="errorPanel" visible="false" styleName="{res.style.errorNotify}">
                        <g:Label styleName="{res.style.notifyLabel}">Error creating User</g:Label>
                    </g:HorizontalPanel>
                </g:VerticalPanel>
        </g:VerticalPanel>
    </g:VerticalPanel>
</ui:UiBinder>